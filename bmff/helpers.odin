import "core:time"

// Returns the movie's duration
duration :: proc(f: ^BMFF_File) -> (res: time.Duration, ok: bool) {
	if f == nil || f.mvhd == nil {
		return {}, false
	}

	#partial switch kind in f.mvhd.payload {
	case MVHD_V0: return time.Duration(kind.duration) * time.Second / time.Duration(kind.time_scale), true
	case MVHD_V1: return time.Duration(kind.duration) * time.Second / time.Duration(kind.time_scale), true
	}
	return
}